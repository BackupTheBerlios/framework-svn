<?xml version="1.0"?>
<ModelConfiguration>
	<Run>
		<Loops>100000</Loops> <!-- default: 1-->
		<StatusUpdateStep>5</StatusUpdateStep>
	</Run>
	<Globals>
		<DeltaT>1</DeltaT> <!-- default: 1-->
	</Globals>
	<Populations>
  	<Personas>
			<Size>1000</Size>
			<Aspects>
				<EducationLevel/>
				<Distance/>
				<SocialCircle/>
				<Geography/>
				<Links/>
			</Aspects>
		</Personas>
	</Populations>
	<Aspects>
		<Links>
			<Seed>25</Seed>
			<Friend_Probability>1</Friend_Probability>
			<Random_Probability>0.1</Random_Probability>
			<Delete_Probability>0.1</Delete_Probability>
			<Startup_Links>1.0</Startup_Links>
		</Links>
		<EducationLevel><!-- dim[levels]-->
			<Levels>10</Levels>
			<Beta> 1.0 </Beta>
			<Seed>25</Seed>
		</EducationLevel>
		<SocialCircle><!-- dim[circ]-->
			<Circles>1</Circles>
			<Seed>25</Seed>
		</SocialCircle>
		<Distance>
			<!-- Delta: Parameter for geographic distance
			            (Generic Minkowski metric)
						delta = 1: Manhattan
						delta = 2: Euclid
			-->
			<Delta>1</Delta>
		</Distance>
		<Geography>
			<Width>10</Width> <!-- dim[xc]-->
			<Height>10</Height> <!-- dim[yc]-->
			<Alfa>2.0</Alfa>
			<Seed>25</Seed>
		</Geography>
	</Aspects>
	<Outputs>
		<Output>
			<Filename>nodos_all.txt</Filename>
			<Headers>Yes</Headers> <!-- Values: yes (default) / no  -->
			<Population>Personas</Population>
            <RestartEveryCycle>No</RestartEveryCycle> <!-- Values: yes / no (default) -->
            <Enabled>Yes</Enabled> <!-- Values: yes (default) / no  -->
			<Type>List</Type>
			<Loops>1000</Loops>		<!-- Max. # of loops in seconds (default infinite)-->
			<Fields>
				<Geography>
					<Field>X</Field>
					<Field>Y</Field>
				</Geography>
				<SocialCircle>
					<Field>Circle</Field>
				</SocialCircle>
				<Links>
					<!--<Field>Degree</Field>
					<Field>Clustering</Field>
					<Field>MeanShortest</Field>
					<Field>Closeness</Field>
					<Field>Betweenness</Field>
					<Field>SizeComponent</Field>
					<Field>MaxDiameter</Field-->
					<!--Field>Links</Field-->
					<Field>LinksUnique</Field>
				</Links>
			</Fields>
		</Output>
		<Output>
			<Filename>nodos_summary.txt</Filename>
			<Headers>Yes</Headers>
			<Population>Personas</Population>
			<Type>Aggregate</Type>
			<Enabled>Yes</Enabled> <!-- Values: yes (default) / no  -->
			<Loops>1000</Loops>
			<Fields>
				<Links>
					<!-- [Operation] = optional
								Valid operations are:
								Average, Sum, Min, Max, Median, Count,
								Percentaje (usage: Percentage value="value")
						 Default operation is Average. -->
					<Field Operation="Average">Degree</Field>
					<Field Operation="Sum">Degree</Field>
					<Field Operation="Average">Clustering</Field>
					<Field Operation="Max">MaxDiameter</Field>
					<!--Field Operation="Average">Betweenness</Field-->
					<!--Field Operation="Count" Value="0">Degree</Field>
					<Field Operation="Count" Value="1">Degree</Field>
					<Field Operation="Count" Value="2">Degree</Field-->
				</Links>
			</Fields>
		</Output>
	</Outputs>
</ModelConfiguration>